<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Messagemonster" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_messagemonster</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Messagemonster</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Messagemonster</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Messagemonster</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Messagemonster</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Messagemonster</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_messagemonster</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_messagemonster</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Messagemonster</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:actionOverflowButtonStyle">@style/Theme.Messagemonster.Overflow</item>
        <item name = "android:listViewStyle">@style/Theme.Messagemonster.LightGrayBackground</item>
        <item name = "android:gridViewStyle">@style/Theme.Messagemonster.LightGrayBackground.GridView</item>
    </style>

     <style name = "Theme.Messagemonster.LightGrayBackground">
         <item name="android:background">@color/light_gray</item>
    </style>

    <style name = "Theme.Messagemonster.LightGrayBackground.GridView">
        <item name="android:padding">@dimen/user_grid_spacing</item>
    </style>

    <style name="Theme.Messagemonster.Overflow" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <style name="ActionBar.Solid.Messagemonster" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_background_textured_messagemonster</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_messagemonster</item>
        <item name="android:backgroundSplit">@drawable/ab_background_textured_messagemonster</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Messagemonster</item>
        <item name="android:titleTextStyle">@style/ActionBar.Solid.Messagemonster.TitleTextStyle</item>
    </style>
    
    <style name="ActionBar.Solid.Messagemonster.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name = "android:textColor">@color/lime_green</item>
    </style>

    <style name="ActionBar.Transparent.Messagemonster" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_messagemonster</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Messagemonster</item>
    </style>

    <style name="PopupMenu.Messagemonster" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_messagemonster</item>
    </style>

    <style name="DropDownListView.Messagemonster" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_messagemonster</item>
    </style>

    <style name="ActionBarTabStyle.Messagemonster" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_messagemonster</item>
    </style>

    <style name="DropDownNav.Messagemonster" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_messagemonster</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_messagemonster</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_messagemonster</item>
    </style>

    <style name="ProgressBar.Messagemonster" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_messagemonster</item>
    </style>

    <style name="ActionButton.CloseMode.Messagemonster" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_messagemonster</item>
    </style>

    <style name="Theme.Messagemonster.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Messagemonster</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Messagemonster</item>
    </style>

    <style name="BackgroundTheme" >
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="TitleTextImage" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/title_image</item>
        <item name="android:paddingTop">60dp</item>
    </style>

    <style name="TentacleImage" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/tentacle</item>
    </style>

    <style name="FieldContainer">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_below">@+id/titleImage</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/login_button_label</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/sea_blue</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="GridImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

</resources>
